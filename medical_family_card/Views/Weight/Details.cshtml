@model medical_family_card.Models.Wt

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Wt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Значение веса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WtValue)
        </dd>
        <dt class = "col-sm-2">
            Дата измерения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WtDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usr.UsrId)
        </dd>
    </dl>
</div>
<div>
    @if (Model.UsrId == Convert.ToInt32(User.Identity.Name))
    {
        <a asp-action="Edit" asp-route-id="@Model?.WtId">Редактировать</a>
        <a>|</a>
        <a asp-action="Index" asp-route-id="@Model.UsrId">Вернуться к списку значений роста</a>
        <a>|</a>
        <a asp-controller="Home" asp-action="Index" asp-route-id=@Model.UsrId>Вернуться к меню</a>
    }
    else
    {
        <a asp-action="Index" asp-route-id="@Model.UsrId">Вернуться к списку значений роста знакомого</a>
        <a>|</a>
        <a asp-controller="Home" asp-action="Index" asp-route-id=@Model.UsrId>Вернуться к меню знакомого</a>
    }
</div>
