@model medical_family_card.Models.Wt

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить запись?</h3>
<div>
    <h4>Вес</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Значение веса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WtValue)
        </dd>
        <dt class = "col-sm-2">
            Дата измерения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WtDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="WtId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@User.Identity.Name">Вернуться к списку веса</a>
    </form>
</div>
