@model medical_family_card.Models.UsrInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "UsrInfoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1>Редактировать "Моя карта"</h1>

    <h4>Заполните информацию о себе</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UsrId" />
                <div class="form-group">
                    <label asp-for="ImgData" class="control-label">Фотография</label>
                    <input asp-for="ImgData" type="file" accept="image/jpeg,image/png" name="uploadImage" class="form-control" />
                    <span asp-validation-for="ImgData" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsrInfoFirstName" class="control-label">Имя</label>
                    <input asp-for="UsrInfoFirstName" class="form-control" />
                    <span asp-validation-for="UsrInfoFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsrInfoLastName" class="control-label">Фамилия</label>
                    <input asp-for="UsrInfoLastName" class="form-control" />
                    <span asp-validation-for="UsrInfoLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsrInfoMiddleName" class="control-label">Отчество</label>
                    <input asp-for="UsrInfoMiddleName" class="form-control" />
                    <span asp-validation-for="UsrInfoMiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsrInfoBirthday" class="control-label">Дата рождения</label>
                    <input asp-for="UsrInfoBirthday" class="form-control" />
                    <span asp-validation-for="UsrInfoBirthday" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenderId" class="control-label">Гендер</label>
                    <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
                    <span asp-validation-for="GenderId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BloodId" class="control-label">Группа крови</label>
                    <select asp-for="BloodId" class="form-control" asp-items="ViewBag.BloodId"></select>
                    <span asp-validation-for="BloodId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RhesusFactorId" class="control-label">Резус-фактор</label>
                    <select asp-for="RhesusFactorId" class="form-control" asp-items="ViewBag.RhesusFactorId"></select>
                    <span asp-validation-for="RhesusFactorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-action="Details" asp-route-id="@User.Identity.Name">Вернуться к моей карте</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
