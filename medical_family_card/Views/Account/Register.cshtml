@model medical_family_card.ViewModels.RegisterModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="UsrName">Имя пользователя</label><br />
            <input type="text" asp-for="UsrName" />
            <span asp-validation-for="UsrName" />
            @Html.ValidationMessage("UsrName")
        </div>
        <div>
            <label asp-for="UsrEmail">Введите электронную почту</label><br />
            <input type="text" asp-for="UsrEmail" />
            <span asp-validation-for="UsrEmail" />
            @Html.ValidationMessage("UsrEmail")
        </div>
        <div>
            <label asp-for="UsrPassword">Введите пароль</label><br />
            <input asp-for="UsrPassword" />
            <span asp-validation-for="UsrPassword" />
            @Html.ValidationMessage("UsrPassword")
        </div>
        <div>
            <label asp-for="ConfirmUsrPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmUsrPassword" />
            <span asp-validation-for="ConfirmUsrPassword" />
            @Html.ValidationMessage("ConfirmUsrPassword")
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
