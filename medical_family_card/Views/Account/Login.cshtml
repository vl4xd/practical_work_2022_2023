@model medical_family_card.ViewModels.LoginModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h1>Вход в аккаунт</h1>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UsrEmail">Введите электронную почту</label>
            <input type="text" asp-for="UsrEmail" />
            <span asp-validation-for="UsrEmail" />
            @Html.ValidationMessage("UsrEmail")
        </div>
        <div class="form-group">
            <label asp-for="UsrPassword">Введите пароль</label>
            <input asp-for="UsrPassword" />
            <span asp-validation-for="UsrPassword" />
            @Html.ValidationMessage("UsrPassword")
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

