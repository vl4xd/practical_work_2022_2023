@model medical_family_card.Models.Friend

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удалить</h1>

<h3>Вы действительно хотите удлаить знакомого?</h3>
<div>
    <h4>Знакомый</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя пользователя
        </dt>
        @if (Model.FromUsrId == Convert.ToInt32(User.Identity.Name))
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToUsr.UsrId)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FromUsr.UsrId)
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FriendId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@User.Identity.Name">Вернуться к списку знакомых</a>
    </form>
</div>
