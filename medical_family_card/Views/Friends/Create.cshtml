@model medical_family_card.ViewModels.FindFriendModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить знакомого</h1>

<h4>Знакомый</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="UserNameTo" class="control-label"></label>
                <select asp-for="UserNameTo" class="form-control" asp-items="ViewBag.ToUsrId"></select>*@

                <label asp-for="UserNameTo">Введите имя пользователя</label>
                <input type="text" asp-for="UserNameTo" />
                <span asp-validation-for="UserNameTo" />
                @Html.ValidationMessage("UserNameTo")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@User.Identity.Name">Вернуться к списку знакомых</a>
</div>

